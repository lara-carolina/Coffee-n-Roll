<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ContConsulta"
            prefWidth="1200" prefHeight="800">

    <MenuBar prefHeight="30.0" style="-fx-background-color: #e8ddc5;"
             AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
             AnchorPane.rightAnchor="0.0">
        <Menu text="Home"/>
        <Menu text="Consulta"/>
    </MenuBar>

    <AnchorPane prefWidth="150"
                style="-fx-background-color: #542223;"
                AnchorPane.topAnchor="30.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0">

        <ImageView fitWidth="120" preserveRatio="true"
                   AnchorPane.topAnchor="10.0"
                   AnchorPane.leftAnchor="15.0">
            <image>
                <Image url="@/imgs/Coffee.png"/>
            </image>
        </ImageView>

    </AnchorPane>

    <AnchorPane style="-fx-background-color: #542223;"
                prefHeight="40"
                AnchorPane.topAnchor="30.0"
                AnchorPane.leftAnchor="150.0"
                AnchorPane.rightAnchor="0.0">

        <TextField prefHeight="25" prefWidth="650"
                   AnchorPane.topAnchor="5.0"
                   AnchorPane.leftAnchor="20.0"
                   fx:id="campoPesquisa"/>

        <ImageView fitHeight="20" preserveRatio="true"
                   AnchorPane.rightAnchor="20.0"
                   AnchorPane.topAnchor="8.0">
            <image>
                <Image url="@/imgs/Lupa.png"/>
            </image>
        </ImageView>

    </AnchorPane>

    <AnchorPane style="-fx-background-color: white;"
                AnchorPane.topAnchor="70.0"
                AnchorPane.leftAnchor="150.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                fx:id="painelConteudo"/>

</AnchorPane>
